<div class="background-image"></div>

<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-10">
    <% DownloadGif.all.each do |gif| %>
      <div class="row" style="margin-top:2rem;">
        <div class="col-md-4">
          <h1 style="color:white;float:left;"><%= gif.name.titleize %></h1>
        </div>
        <div class="col-md-4">
          <div>
            <%= image_tag("gifs/#{gif.name}.gif") %>
          </div>
        </div>
        <div class="col-md-4">
          <h2>
            <i class="fa-solid fa-clipboard gif-link" style="color:white" data-id="<%= gif.id %>" data-bs-toggle="tooltip" title="Copy" data-bs-placement="top"></i>
            <span style="color:white" id="gif-link-<%= gif.id %>">
              <%= "https://payday-2-charts.herokuapp.com/gifs/#{gif.name}.gif" %>
            </span>
          </h2>
        </div>
      </div>
      <hr style="background-color:white;color:white;height:4px;border:none;opacity:100;"/>
    <% end %>
  </div>
</div>

<script>
  var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
  var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
    return new bootstrap.Tooltip(tooltipTriggerEl)
  })

  $('.gif-link').on('click', (e) => {
    const link = $(`#gif-link-${e.target.dataset.id}`)
    navigator.clipboard.writeText(link.text())
  })
</script>

<style>
  .gif-link:hover{
    transform: scale(1.3)
  }
</style>